<section class="login container">
  <form action="/todos-os-produtos" method="POST" class="login__form">
    <fieldset>
      <legend>Iniciar sesión</legend>
      <label for="email" class="sr-only">Escribe tu correo electrónico</label>
      <input
        type="email"
        name="email"
        id="email"
        class=""
        placeholder="Escribe tu correo electrónico"
        data-type="email"
        required
      />
      <span role="alert"></span>
      <label for="pass" class="sr-only">escribe tu contraseña</label>
      <input
        type="password"
        name="password"
        id="pass"
        class=""
        placeholder="escribe tu contraseña"
        data-type="pass"
        pattern="^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?!.*[!@#$%^&*_=+-]).{6,12}$"
        required
      />
      <span role="alert"></span>
      <button type="submit" class="button__blue button">Entrar</button>
    </fieldset>
  </form>
</section>
