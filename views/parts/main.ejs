<!-- Banner -->
<section class="banner">
  <div class="banner__image"></div>
  <div class="banner__text">
    <h2>Oferta especial</h2>
    <h3>Productos seleccionados con 33% de descuento</h3>
    <div class="banner__button">
      <a href="#consoles" class="button__blue button">Ver Descuentos</a>
    </div>
  </div>
</section>

<!-- Destaque -->
<section class="products container highlight">
  <div class="products__text">
    <h2>Tecnologia</h2>
    <a href="<%= `/ver&category=${starWars[0].category}` %>"
      >Ver todos <i class="icon-arrow-right"></i
    ></a>
  </div>
  <div class="products__card grid">
    <% starWars.forEach(product => { %>
    <div>
      <img src="<%= product.image %>" alt="<%= product.altText %>" />
      <h3><%= product.name %></h3>
      <p><%= product.price %></p>
      <a
        class="products__card--view"
        href="#"
        method="POST"
        data-id="<%= product.id %>"
      >
        Ver producto
      </a>
    </div>
    <% }) %>
  </div>
</section>

